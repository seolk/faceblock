<center><h1>Welcome to FaceBlock @</h1>
<%= button_to 'Log Out', destroy_user_session_path, method: :delete , class: 'ui red button' %></center>
<%= link_to 'Create a New Post', new_post_path , class: 'ui blue button' %>

<div class="ui divider"></div>

<% @posts.each do |post| %>
        <%= link_to post.content, post %></br></br></br>
        <%= link_to 'edit post', edit_post_path(post), class: "ui violet basic button" %>
        <%= link_to 'delete post', post_path(post), method: :delete, class: "ui red basic button" %>
<% end %>


